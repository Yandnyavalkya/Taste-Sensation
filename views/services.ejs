            text-align: center;
            transition: transform 0.3s ease-in-out;
            position: relative;
            overflow: hidden;
        }

        .service-box:hover {
            transform: translateY(-10px);
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
        }

        .service-icon {
            font-size: 50px;
            color: #FF9800;
            margin-bottom: 10px;
        }

        .service-box h2 {
            font-size: 1.8rem;
            margin-bottom: 10px;
            color: #333;
        }

        .service-box p {
            font-size: 1rem;
            color: #666;
            line-height: 1.5;
            padding: 0 10px;
        }

        .btn {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 15px;
            background: #FF9800;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1rem;
            transition: 0.3s;
        }

        .btn:hover {
            background: #e68900;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .services {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
</head>
